@model IEnumerable<Store.DTO.GetDeletedDTO>

@{
    ViewData["Title"] = "الفواتير المحذوفة";
}

<div class="container mt-4">

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>رقم الفاتورة</th>
                    <th>تم الحذف بواسطة</th>
                    <th>تاريخ الحذف</th>
                    <th>المصدر</th>
                    <th>سعر الصرف</th>
                    <th>الإجمالي</th>
                    <th>العمليات</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">لا توجد فواتير محذوفة.</td>
                    </tr>
                }
                else
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.DeletedBy</td>
                            <td>@item.DeletedAt</td>
                            <td>@item.SourceName</td>
                            <td>@item.ExchangeRate.ToString("N2") ل.س</td>
                            <td>@item.Total.ToString("N2") ل.س</td>
                            <td><a asp-action="DeleteDetails" asp-route-id="@item.Id" class="btn btn-secondary">عرض</a></td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
